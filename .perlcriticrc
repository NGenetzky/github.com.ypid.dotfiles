severity				= 2
color-severity-medium	= blue
#force					= 1
color					= 1

# verbose = %s: %m at line %l, column %c. %e\n
verbose = 8
## to get for example ControlStructures::ProhibitPostfixControls


## theme iknow: I should know if I have to used it or if I should make an exception

[Subroutines::RequireFinalReturn]
add_themes	= iknow
severity	= 1

# [ErrorHandling::RequireUseOfExceptions]
# add_themes	= iknow
# severity	= 1


## "die" used instead of "croak"
[ErrorHandling::RequireCarping]
add_themes	= iknow
severity	= 1

[ControlStructures::ProhibitUnlessBlocks]
add_themes	= iknow
severity	= 1

[Variables::ProhibitPunctuationVars]
add_themes	= iknow
severity	= 1


## post if
[ControlStructures::ProhibitPostfixControls]
allow = if unless


## These policies are disabled (((
[ValuesAndExpressions::ProhibitMagicNumbers]
allowed_values = -1 0 1 2

[InputOutput::RequireBriefOpen]
lines = 100

[Modules::ProhibitExcessMainComplexity]
max_mccabe = 30

