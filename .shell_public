## Little functions {{{
## http://superuser.com/a/795787/226840
function up() {
    if [[ $1 -lt 1 ]]; then
        echo "Only positive integer values larger than 1 are allowed!" >&2
        echo -e "\n\tUsage:\n\t======\n\n\t\t# to go up 10 levels in your directory\n\t\tup 10\n\n\t\t# to go up just 2 levels\n\t\tup 2\n" >&2
        return 1;
    fi

    up=""

    for ((i=1; i<=$1;i++)); do
        up="${up}../"
    done

    cd "${up}"
}

## Create a new directory and enter it.
unalias md 2>/dev/zero
function md() {
    mkdir -p "$@" && cd "$@"
}

function run-c() {
    echo "main(){ ${*} }" | tcc -run -
}

function subnetcalc() {
    if [[ $# == 0 ]]; then
        /usr/bin/subnetcalc
    else
        /usr/bin/subnetcalc $@ -n
    fi
}

## https://gist.github.com/CMCDragonkai/62c04977f62037285772
function sed-keyword-escape {
    echo "$1" | sed -e 's/[]\/$*.^|[]/\\&/g'
}

function sed-replace-escape {
    echo "$1" | sed -e 's/[\/&]/\\&/g'
}

function sed-easy {
    sed -i "s/$(sed-keyword-escape $1)/$(sed-replace-escape $2)/g" "$3"
}
