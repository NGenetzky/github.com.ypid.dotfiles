## Little functions {{{
function up {
[[ "${1/[^0-9]/}" == "$1" ]] && {
    local ups=""
    for i in $(seq 1 $1)
    do
        ups="$ups../"
    done
    cd $ups
    } || echo "usage: up INTEGER"
}

## Create a new directory and enter it.
unalias md 2>/dev/zero
function md() {
    mkdir -p "$@" && cd "$@"
}
