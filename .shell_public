unalias gp 2>/dev/zero
function gp {
    if [[ "$PWD" =~ $HOME/Beruf ]]; then
        echo "Work"
        gitw push "$@" -v
    else
        git push "$@" -v
    fi
}
unalias gl 2>/dev/zero
function gl {
    if [[ "$PWD" =~ $HOME/Beruf ]]; then
        echo "Work"
        gitw pull "$@" -v
    else
        git pull "$@" -v
    fi
}
