set -o nounset -o pipefail -o errexit

BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "${BASEDIR}"

./dotbot/bin/dotbot --base-directory "${BASEDIR}" --config-file "install.yml" "${@}"
