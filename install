#!/bin/bash

cd "`dirname "$0"`"
git submodule update --init --recursive

# inside another submodule â€¦
git clone git://github.com/zsh-users/zsh-syntax-highlighting.git .oh-my-zsh/custom/plugins/zsh-syntax-highlighting

ls -A1|grep -Pv '^(.git$|\w)'|while read file;do
    target="$PWD/$file"
    target=${target#$HOME/}
    ln -Ts "$target" "$HOME/$file"
done

vim_spell="$HOME/.vim/spell"
mkdir -p "$vim_spell"
for file in {en,de}.utf-8.{spl,sug};do
    if [ ! -e "$vim_spell/$file" ];then
        wget -c "ftp://ftp.vim.org/pub/vim/runtime/spell/$file" -O "$vim_spell/$file"
    fi
done

# Improves performance of ZSH. Functions not needed or not used (yet).
pushd .oh-my-zsh/lib/
rm aliases.zsh bzr.zsh correction.zsh grep.zsh key-bindings.zsh misc.zsh nvm.zsh rbenv.zsh rvm.zsh spectrum.zsh termsupport.zsh directories.zsh functions.zsh

# git commit -am 'Improves performance of ZSH. Functions not needed or not used (yet).'
# Leave submodule dirty.
popd
