#!/bin/bash

cd "`dirname "$0"`"
git submodule update --init --recursive

ls -A1|grep -Pv '^(.git$|\w)'|while read file
do	ln -Ts "$PWD/$file" "$HOME/$file"
done

vim_spell="$HOME/.vim/spell"
mkdir -p "$vim_spell"
for file in {en,de}.utf-8.{spl,sug};do
        wget -c "ftp://ftp.vim.org/pub/vim/runtime/spell/$file" -O "$vim_spell/$file"
done
