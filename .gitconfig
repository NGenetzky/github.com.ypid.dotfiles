[user]
	name = Robin Schneider
	email = ypid23@aol.de
[color]
	ui = auto
	status = auto
	branch = auto
[pack]
	threads = 0
[alias]
	wd = diff --color-words
	re = remote -v
	st = status
	ci = commit -v
	cil = commit --reedit-message=HEAD --reset-author
	cii = commit --all -m 'Initial commit.'
	## use last commit message
	co = checkout
	br = branch --all
	lgn = log --pretty=oneline --abbrev-commit --show-notes=*
	lg = log --graph --pretty=format:'%Cred%h..%Creset - %s %Cgreen(%cr)%Creset - %an' --abbrev-commit --date=relative
[core]
	; excludesfile = /home/rsadmin/.gitignore_global
	editor = vi
[github]
	user = ypid
[log]
	date = local
[push]
	default = simple
[annex]
	backends = SHA512E
	diskreserve = 600 megabyte
