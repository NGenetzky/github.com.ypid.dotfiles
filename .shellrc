#!/bin/bash
# sourced by bash and zsh

if [ -f ~/.shell_public ]; then
    . ~/.shell_public
fi
if [ -f ~/.shell_work ]; then
    . ~/.shell_work
fi
if [ -f ~/.shell_privat ]; then
    . ~/.shell_privat
fi

# Machine dependent, is not synced across the machines!
if [ -f ~/.shell_local ]; then
    . ~/.shell_local
fi
